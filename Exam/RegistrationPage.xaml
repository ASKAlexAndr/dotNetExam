<Page x:Class="Exam.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegistrationPage">

    <Grid>
        <Button x:Name="registr_btn" Content="Зарегистрироваться" HorizontalAlignment="Left" Margin="476,354,0,0" VerticalAlignment="Top" Width="296" Click="Menu_login_btn_Click" Height="55"/>
        <TextBox x:Name="loginField" MaxLength="50" HorizontalAlignment="Left" Height="28" Margin="93,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="652"/>
        <PasswordBox x:Name="passwordField" MaxLength="50" HorizontalAlignment="Left" Height="23" Margin="93,234,0,0" VerticalAlignment="Top" Width="652"/>
        <Label x:Name="password_login_label" Content="Пароль" HorizontalAlignment="Left" Margin="21,231,0,0" VerticalAlignment="Top" Width="64"/>
        <Label x:Name="login_label" Content="Логин" HorizontalAlignment="Left" Height="29" Margin="23,175,0,0" VerticalAlignment="Top" Width="62"/>
        <TextBox x:Name="surnameField" MaxLength="50" HorizontalAlignment="Left" Height="28" Margin="93,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="652"/>
        <Label x:Name="login_label_Copy" Content="Фамилия" HorizontalAlignment="Left" Height="29" Margin="23,123,0,0" VerticalAlignment="Top" Width="62"/>
        <TextBox x:Name="nameField" MaxLength="50" HorizontalAlignment="Left" Height="28" Margin="88,68,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="652"/>
        <Label x:Name="login_label_Copy1" Content="Имя" HorizontalAlignment="Left" Height="29" Margin="21,68,0,0" VerticalAlignment="Top" Width="62"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="659,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="37" Width="113" Opacity="0.99"><Hyperlink x:Name="login_link" NavigateUri="LoginPage.xaml"><Run Text="Авторизация"/></Hyperlink></TextBlock>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="21,10,0,0" TextWrapping="Wrap" Text="Регистрация" VerticalAlignment="Top" Height="53" Width="275" FontSize="24"/>

    </Grid>
</Page>
