<Page x:Class="Exam.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Exam"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">
    <Page.Resources>
        <local:ExamDBDataSet x:Key="examDBDataSet"/>
        <CollectionViewSource x:Key="viewScoreViewSource" Source="{Binding ViewScore, Source={StaticResource examDBDataSet}}"/>
    </Page.Resources>

    <Grid DataContext="{StaticResource viewScoreViewSource}">
        <Button x:Name="exit" Content="Выход" HorizontalAlignment="Left" Margin="707,10,0,0" VerticalAlignment="Top" Width="75" Click="Exit_Click" />
        <Button x:Name="statistic" Content="Статистика" HorizontalAlignment="Left" Margin="617,10,0,0" VerticalAlignment="Top" Width="75" Click="Statistic_Click"/>
    </Grid>
</Page>
